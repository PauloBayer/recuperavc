<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App theme used by your Activity -->
    <style name="Theme.WhisperCppDemo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Make the very first pre-Compose frame dark -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Bars are dark before Compose paints -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Status bar light/dark icons flag (available API 23+) is fine to keep here -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
